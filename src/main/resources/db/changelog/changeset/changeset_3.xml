<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

  <changeSet id="3" author="Filip Nedelkovski">
    <modifyDataType tableName="users" columnName="id" newDataType="BINARY(16)"/>
    <renameColumn tableName="posts" oldColumnName="Id" newColumnName="id" columnDataType="BINARY(16)"/>
    <addColumn tableName="posts">
      <column name="user_id" type="BINARY(16)">
        <constraints nullable="false"/>
      </column>
    </addColumn>
  </changeSet>
</databaseChangeLog>